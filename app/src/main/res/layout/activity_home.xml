<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"

    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"

        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menubtn"
            android:layout_width="45dp"
            android:layout_height="50dp"

            android:src="@drawable/menu" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_alignParentRight="true"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            android:elevation="2dp"
            app:civ_border_color="#f1f1f1"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Find your Desired Faculty"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/searchfaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_style"
        android:drawableRight="@drawable/searchicon"
        android:drawablePadding="5dp"
        android:elevation="30dp"
        android:hint="Search Faculty"
        android:paddingLeft="15dp"
        android:textColor="#000"
        android:textColorHint="#333"
        android:textSize="20dp" />

    <!-- Amit Garg Slot -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="#9cbbed"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/book_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit Garg"
                android:textColor="#4286f4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CSE"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tarun Slot -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="#9cbbed"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/book_fname_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarun Jain"
                android:textColor="#4286f4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CSE"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Deepika shekhawat Slot -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="#9cbbed"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/book_fname_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deepika Shekhawat"
                android:textColor="#4286f4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CSE"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Sandeep chaurasia Slot -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="#9cbbed"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/book_fname_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sandeep chaurasia"
                android:textColor="#4286f4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_date_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="CSE"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardBackgroundColor="#9cbbed"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/book_fname_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Himanshu Priyadashi"
                android:textColor="#4286f4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_date_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1:00AM - 2:00AM"
                android:textColor="#000000"
                android:textSize="17sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

